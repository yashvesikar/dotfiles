eval "$(direnv hook zsh)"

# intellij idea path
export PATH="/Applications/IntelliJ IDEA.app/Contents/MacOS:$PATH"

# neovim alias
alias vim="nvim"


## zip util
function zip-visible(){
    zip -FSr $1 $2 -X -x "*/\.*"
}

